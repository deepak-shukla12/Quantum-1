<!DOCTYPE html>
<html lang="en">

<head>
  {{>headerlinks}}

</head>

<body>
  {{>navbar}}

  <div class="container-fluid main_header">
    <div class="row">
      <div class="col-md-10 col-12 mx-auto">
        
        <div class="main_content">
          <form class="temp_form">
            <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off">
            <input type="submit" value="search" id="submitBtn">
          </form>
        </div>
        <div class="tempInformation">
          <div class="top_layer">
            <p id="day">Tuesday</p>
            <p id="today_date">3 April</p>
          </div>
          <div class="main_layer">
            <p id="city_name">Your city output here</p>
            <div class="middle_layer data-hide">
              <p id="temp"><span>0</span><sup>o</sup>C</p>
              <p id="temp_status"><i class="fa fa-duotone fa-cloud fa-bounce fa-2xs" style="--fa-secondary-opacity: 0.6;"></i></p>
            </div>
          </div>
        </div>

        </div>
      </div>
    </div>
  </div>
  <!-- footer code -->
  {{>footer}}
  <script src="js/main.js"></script>
</body>

</html>